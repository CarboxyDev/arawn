{
  "name": "@repo/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts",
    "db:reset": "dotenv -e .env.local -- prisma migrate reset --force --skip-seed",
    "db:reset:seed": "dotenv -e .env.local -- prisma migrate reset --force"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/formbody": "^8.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/schedule": "^5.0.2",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "@prisma/client": "6.17.1",
    "@repo/packages-types": "workspace:*",
    "@scalar/fastify-api-reference": "^1.39.3",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.3.27",
    "close-with-grace": "^2.1.0",
    "dotenv-flow": "^4.1.0",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.1",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.2",
    "toad-scheduler": "^3.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@repo/packages-utils": "workspace:*",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.8",
    "prisma": "6.17.1",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
