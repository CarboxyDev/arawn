{
  "name": "@repo/packages-types",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./api-response": {
      "types": "./dist/api-response.d.ts",
      "import": "./dist/api-response.mjs",
      "require": "./dist/api-response.js"
    },
    "./health-check": {
      "types": "./dist/health-check.d.ts",
      "import": "./dist/health-check.mjs",
      "require": "./dist/health-check.js"
    },
    "./pagination": {
      "types": "./dist/pagination.d.ts",
      "import": "./dist/pagination.mjs",
      "require": "./dist/pagination.js"
    },
    "./role": {
      "types": "./dist/role.d.ts",
      "import": "./dist/role.mjs",
      "require": "./dist/role.js"
    },
    "./user": {
      "types": "./dist/user.d.ts",
      "import": "./dist/user.mjs",
      "require": "./dist/user.js"
    }
  },
  "scripts": {
    "update-exports": "tsx ../../turbo/update-exports.ts .",
    "dev": "pnpm update-exports && tsup --watch",
    "build": "pnpm update-exports && tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  }
}
