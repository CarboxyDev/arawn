{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["tsconfig.json", "turbo.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "inputs": [
        "src/**",
        "prisma/**",
        "package.json",
        "tsconfig.json",
        "tsup.config.ts",
        "next.config.ts"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["src/**", "tsconfig.json", "package.json"]
    },
    "dev": {
      "dependsOn": ["^build", "db:generate"],
      "cache": false,
      "persistent": true,
      "outputLogs": "hash-only"
    },
    "db:generate": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "eslint.config.*", "package.json"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false,
      "inputs": ["src/**", "eslint.config.*", "package.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "vitest.config.ts",
        "package.json"
      ],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "vitest.config.ts",
        "package.json"
      ],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "vitest.config.ts",
        "package.json"
      ]
    }
  }
}
