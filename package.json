{
  "name": "arawn-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Production-ready TypeScript monorepo with Next.js and NestJS",
  "scripts": {
    "init:project": "node scripts/setup.js",
    "dev": "turbo run dev --output-logs=full",
    "dev:app": "turbo run dev --filter @repo/frontend --filter @repo/backend",
    "dev:packages": "turbo run dev --filter '@repo/packages-*'",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:parallel": "turbo run test --concurrency=3",
    "graph": "turbo run build --graph=graph.html && open graph.html",
    "graph:dev": "turbo run dev --graph=dev-graph.html && open dev-graph.html",
    "analyze": "turbo run build --dry-run=json > build-plan.json",
    "prepare": "husky"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.20.0",
    "turbo": "^2.3.4",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
